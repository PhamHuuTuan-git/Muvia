generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Movie {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  episodes        Json?
  actor           String[]
  category        String[]
  chieurap        Boolean
  content         String
  country         String[]
  created         Json
  director        String[]
  episode_current String
  episode_total   String
  imdb            Json
  is_copyright    Boolean
  lang            String
  modified        Json
  name            String
  notify          String
  origin_name     String
  poster_url      String
  quality         String
  showtimes       String
  slug            String
  status          String
  sub_docquyen    Boolean
  thumb_url       String
  time            String
  tmdb            Json
  trailer_url     String
  type            String
  view            Int
  year            Int

  @@map("movies")
}

model Category {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  slug String

  @@map("categories")
}

model Country {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  slug String

  @@map("countries")
}

model Comment {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  type    String
  content String
  date    DateTime @default(now())
  userId  String
  movieId String

  @@map("comments")
}

model Reference {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  userId         String
  likedMovies    String[]
  recentWatching String[]

  @@map("references")
}
